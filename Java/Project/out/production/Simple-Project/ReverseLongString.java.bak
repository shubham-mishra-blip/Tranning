// Reverse every word present in string

import java.util.*;

class ReverseLongString 
{
    static String ReverseOperation(String s){
		String[] a = s.split(" ");
		if (a.length == 0) return s;

		for (int i = 0; i < 1; i++)
		{
			System.out.println(a[i]);
		}
		
		int i = 0;
		for (String string : a)
		{
			a[i] = new String(string).reverse().toString();      //always use toString with reverse Method when we use outside the main method;
			i ++;
		}
		return String.join(" ", a);

    }
	public static void main(String[] args) 
	{
		String s1 = "Hello World";
		String op = ReverseOperation(s1);

		System.out.println(op);
		
	}
}
